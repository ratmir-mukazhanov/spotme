<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_background">

    <ImageView
        android:id="@+id/iv_dialog_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/btn_star_big_on"
        app:tint="#FFD700"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_app_text"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_dialog_icon" />

    <TextView
        android:id="@+id/tv_dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_app_description_text"
        android:textSize="16sp"
        android:textColor="@color/text_tertiary"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:progressTint="#FFD700"
        android:progressBackgroundTint="#606060"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_rating_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_stars_text"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rating_bar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feedback_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_rating_message"
        app:boxStrokeColor="@color/input_box_stroke_color"
        app:hintTextColor="@color/input_hint_text_color"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:gravity="top|start"
            android:hint="@string/share_experience_text"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_rating"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/send_avaliation_text"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/button_primary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/feedback_input_layout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/send_later_text"
        android:textColor="@color/text_primary"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/text_tertiary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_submit_rating"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>