<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAccountTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Stats"
        android:textColor="#1976D2"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Profile Image Container com imagem e botão de edição -->
    <FrameLayout
        android:id="@+id/profileImageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvAccountTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="174dp"
            android:layout_height="156dp"
            android:src="@drawable/ic_default_profile"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="2dp" />


    </FrameLayout>

    <!-- All Time Header -->
    <TextView
        android:id="@+id/tvAccountTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="All Time"
        android:textColor="#1976D2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileImageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- All Time: Total -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotalAllTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAccountTitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:background="@drawable/card_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total de Estacionamentos"
                android:textColor="#888888"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvTotalAllTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="355"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- All Time: Avg -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvgAllTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardTotalAllTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:background="@drawable/card_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tempo Médio de Estacionamento"
                android:textColor="#888888"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvAvgAllTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25min"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- This Month Header -->
    <TextView
        android:id="@+id/tvAccountTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="This Month"
        android:textColor="#1976D2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardAvgAllTime"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- This Month: Total -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotalThisMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAccountTitle4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:background="@drawable/card_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total de Estacionamentos"
                android:textColor="#888888"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvTotalThisMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- This Month: Avg -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvgThisMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardTotalThisMonth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:background="@drawable/card_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tempo Médio de Estacionamento"
                android:textColor="#888888"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvAvgThisMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25min"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
